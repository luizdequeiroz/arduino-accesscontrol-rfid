@model List<AccessControl.Models.Usuario>
@{
    var bfoto = new AccessControl.Models.DAOs.FotoDao().Selecionar(Model.Rfid);
}

@if (Model.Count == 0)
{
    <center><h2 id="faca">Faça sua pesquisa!</h2></center>
}
else
{
    foreach (var usuario in Model)
    {
        <div id="foto">
            <img src="data:image;base64, @System.Convert.ToBase64String(bfoto.Imagem)" alt="foto do perfil" height="100" width="100" />
        </div>
        <div id="atualizar">
            <div>
                <b>NOME</b>
                <i>@usuario.Nome</i>
            </div>
            <div id="email">
                <b>E-MAIL </b>
                <i>@usuario.Email</i>
            </div>
            <div id="descricao">
                <b>DESCRIÇÃO </b>
                <i>@usuario.Descricao</i>
            </div>
            <div id="telefone">
                <b>TELEFONE </b>
                <i>@usuario.Telefone</i>
            </div>
            <div id="nascimento">
                <b>DATA DE NASCIMENTO </b>
                <i>@usuario.Nascimento</i>
            </div>
            <div id="tipo">
                <b>TIPO </b>
                <i>
                    @if (usuario.Tipo.Equals("Nor"))
                    {
                        <span>Normal</span>
                    }
                    else
                    {
                        <span>Administrador</span>
                    }

                </i>
            </div>
        </div>
        using (Html.BeginForm("Formulario", "Administracao", new { FormMethod = "Get" }))
        {
            <input type="hidden" id="usuario" name="usuario" value="@usuario" />
            <input type="submit" id="atualizar" name="atualizar" value="ATUALIZAR" />
        }
    }
}