@model List<AccessControl.Models.Usuario>
@{
    ViewBag.Title = "Consultar";
    ViewBag.Legend = "CONSULTA";
}

<fieldset>
    @using (Ajax.BeginForm("Consultar", "Administracao", new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "divResultado" }))
    {
        <legend>
            @Html.TextBox("busca") <input type="submit" value="Pesquisar" placeholder="PESQUISAR POR NOME" />
        </legend>
        <p>@Html.Partial("_Resultado", Model)</p>
    }
</fieldset>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}