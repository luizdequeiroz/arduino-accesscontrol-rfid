        #foto {
            float: left;
            margin: 5px;
        }

        #dados {
            margin: 5px;
            cursor: pointer;
            font-size: 15px;
            font-family: "Comic Sans Serif", "Comic Sans", cursive;
        }

        #dadosList {
            margin: 5px;
            cursor: pointer;
            font-size: 13px;
            font-family: "Comic Sans Serif", "Comic Sans", sans-serif;
        }

        h2, h3 {
            text-align: center;
        }

        div.func {
            display: block;
            float: right;
        }

        a.func, input.func {
            cursor: pointer;
            padding: 4px;
            border: 0 none none;
            font-size: 13px;
            font-family: "Comic Sans Serif", "Comic Sans", sans-serif;
            text-decoration: none;
            text-align: center;
            color: #fff;
            background-color: #333;
            float: right;
        }

            a.func:hover, input.func:hover {
                color: #069;
            }

        hr {
            width: 100%;
            text-align: center;
        }
    </style>
</head>
<body>
    <header class="navigation">
        <ul class="nav">
            <li>
                @Html.ActionLink("Início", "Inicio", "Inicio")
            </li>
            <li>
                @Html.ActionLink("Sobre", "Sobre", "Inicio")
            </li>
        </ul>
    </header>
    <fieldset>
        <legend>@ViewBag.Legend</legend>
        <section>
            @RenderBody()
        </section>
    </fieldset>
    <footer>
        AccessControl &copy; Todos os direitos reservados.
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>