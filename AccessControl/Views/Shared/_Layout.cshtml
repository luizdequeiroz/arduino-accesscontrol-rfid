    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <style type="text/css">
        footer {
            text-align: center;
        }

        .navigation {
        }

        .nav {
            margin: 0px;
            padding: 0px;
            list-style: none;
            text-align: center;
        }

            .nav li {
                float: left;
                width: 50%;
                position: relative;
            }

                .nav li.adm {
                    width: 33.33%;
                }

                .nav li a {
                    background: #333;
                    color: #fff;
                    display: block;
                    padding: 7px 8px;
                    text-decoration: none;
                    border-top: 1px solid #069;
                }

                    .nav li a:hover {
                        color: #069;
                    }

        legend {
            color: black;
        }

        /* Inputs */

        /*
        .input-style { //tem que dicionar as class nos inputs
            height: 30px;
